#triggers

CREATE TRIGGER tr_func_user
    AFTER INSERT ON funcionarios
    FOR EACH ROW
        INSERT INTO usuarios(usuarioLogin, usuarioSenha) VALUES
            (NEW.funcMatricula, REPLACE(NEW.funcAdmissao, '-', ''));

CREATE TRIGGER 'tr_veic_devolucao'
    AFTER UPDATE ON 'ordem_servico'
    FOR EACH ROW
    BEGIN
        UPDATE TABLE 'veiculos'
            SET veiculos.veicStatusAlocado = 0
            WHERE veiculos.veicPlaca = NEW.osVeicPlaca;
    END
